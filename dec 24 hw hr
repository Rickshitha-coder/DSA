87. Hashing - Efficient Library Book Tracking System


import java.util.*;
public class Solution
{
    public static void main (String[] args)
    {
        Scanner sc=new Scanner(System.in);
        final int SIZE = 100;
        int[] id=new int[SIZE];
        String[] name=new String[SIZE];
        Arrays.fill(id,-1);
        
        int n=sc.nextInt();
        for(int i=0;i<n;i++)
        {
            int bookid=sc.nextInt();
            sc.nextLine();
            String bookname=sc.nextLine();
            
            int index=bookid %SIZE;
            
            boolean placed = false;
            
            for(int probe=0;probe<SIZE;probe++)
            {
                int newindex=(index+probe)%SIZE;
                
                if(id[newindex]==-1 || id[newindex]==bookid)
                {
                    id[newindex]=bookid;
                    name[newindex]=bookname;
                    placed=true;
                    break;
                }
            }
        } //for
        
        int q=sc.nextInt();
        for(int i=0;i<q;i++)
        {
            int searchid=sc.nextInt();
            int index=searchid%SIZE;
            
            boolean found=false;
            
            for(int probe=0;probe<SIZE ; probe++)
            {
                int newindex=(index+probe)%SIZE;
                
                if(id[newindex]==-1)
                {
                    break;
                }
                if(id[newindex]==searchid)
                {
                    System.out.println(name[newindex]);
                    found=true;
                    break;
                }
            }//probee
            
            if(!found)
            {
                System.out.println("Book not found");
            }
        }
    }
}
